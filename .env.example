# API Base URL Configuration
# Copy this file to .env.test, .env.development, or .env.production and update the values

# Development environment (default)
VITE_API_BASE_URL=http://localhost:8000

# Test/Staging environment
# VITE_API_BASE_URL=https://api-test.mutopia-pet.com

# Production environment
# VITE_API_BASE_URL=https://api.mutopia-pet.com

# Debug mode (set to 'true' to enable debug logging in development)
# VITE_DEBUG=true

# Third-party service configuration
# Google OAuth Client ID (from Google Cloud Console)
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here

# Facebook App ID (from Facebook Developers)
VITE_FACEBOOK_APP_ID=your_facebook_app_id_here

# Feature flags
# Enable social login (Google, Facebook, etc.)
VITE_ENABLE_SOCIAL_LOGIN=true
